<section class="page--auth">
  <h1>Log in</h1>

  <%= form_with url: login_path do |form| %>
    <div class="form-sections">
      <% if notice %>
        <div>
          <div class="input--error-message"><%= tag.p notice %></div>
        </div>
      <% end %>

      <% if alert %>
        <div>
          <div class="input--error-message"><%= tag.p alert %></div>
        </div>
      <% end %>

      <div>
        <%= form.label :email %>
        <%= form.email_field :email, placeholder: "Enter your email", required: true, autofocus: true%>
      </div>

      <div>
        <%= form.label :password do %>
          Password
          <%= link_to "Reset your password", new_password_reset_path, class: "txt--accent txt--link txt--w-normal" %>
        <% end %>
        <%= form.password_field :password, placeholder: "Enter your password", required: true %>
      </div>

      <div>
        <%= form.button "Log in", class: "button button--primary" %>
      </div>

      <div>
        <span>
          <p>
            <span class="txt--w-semibold">Donâ€™t have an account?</span> <br />
            <%= link_to "Sign up", sign_up_path, class: "txt--accent txt--link" %>
          </p>
        </span>
      </div>
    </div>
  <% end %>
</section>