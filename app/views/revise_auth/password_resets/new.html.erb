<section class="page--auth">
  <h1>Reset your password</h1>

  <%= form_with model: @user, url: password_resets_path do |form| %>
    <div class="form-sections">
      <% if form.object.errors.any? %>
        <div>
          <% form.object.errors.full_messages.each do |message| %>
            <div class="input--error-message">
              <p><%= message %></p>
            </div>
          <% end %>
        </div>
      <% end %>

      <div>
        <%= form.label :email %>
        <%= form.email_field :email, placeholder: "Enter your email", required: true, autofocus: true %>
      </div>

      <div >
        <%= form.button "Send me the reset instructions", class: "button button--primary" %>
      </div>

      <div>
        <span>
          <p>
            <span class="txt--w-semibold">Remember password?</span> <br />
            <%= link_to "Log in", login_path, class: "txt--accent txt--link" %>
          </p>
        </span>
      </div>
    </div>
  <% end %>
</section>